{% extends 'layouts/base.html.twig' %}


{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger rounded mb-3" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<h1 class="text-center mt-5 mb-3">Please sign in</h1>
		<p class="text-center text-muted mb-4">Your pins are waiting for you</p>
		<div class="container col-md-6 mx-auto">
			<div class="form-group mb-3">
				<label class="mb-1" for="email">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
			</div>
			<div class="form-group ">
				<label class="mb-1" for="password">Password</label>
				<input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="d-flex justify-content-between mt-2">
				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Remember me
					</label>
				</div>
				<a href="#">Forgot password ?</a>
			</div>
			<button class="btn  btn-primary w-100" type="submit">
				Sign in
			</button>
			<p class="my-3 text-center text-muted">Not registered yet? <a href="#">Create an account</a></p>
		</form>
	</div>

{% endblock %}
