{% extends 'base.html.twig' %}

{% block title 'Find the best Pins' %}


{% block body %}
	<h1>{{pluralize(pins|length,'pin')}} </h1>
	{% for pin in pins %}
		<article>
			<a href="{{path('app_pin_show',{'id':pin.id})}}"><h2>{{pin.title}}</h2></a>
		</article>
			<h2>{{pin.description}}</h2>
	{% endfor %}
{% endblock %}
